{
  "name": "italki-api",
  "version": "0.0.1",
  "description": "An unofficial JavaScript wrapper for the official italki API.",
  "main": "./lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build-clean": "rimraf lib dist coverage",
    "build-dist": "ROLLUP_ENV=development rollup -c -o dist/italki-api.js",
    "build-dist-min": "ROLLUP_ENV=production rollup -c -o dist/italki-api.min.js",
    "build-lib": "babel src -d lib --ignore '**/*.test.js' && flow-copy-source src/ lib/ -i '**/*.test.js'",
    "build": "yarn build-clean && yarn build-lib && yarn build-dist && yarn build-dist-min",
    "test": "jest --coverage",
    "lint": "eslint .",
    "report-coverage": "coveralls < coverage/lcov.info"
  },
  "lint-staged": {
    "*.{js,json,css}": ["pretty-quick --staged && lint", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PatriceVignola/italki-api.git"
  },
  "keywords": [
    "italki",
    "api",
    "unofficial",
    "wrapper"
  ],
  "author": "Patrice Vignola",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PatriceVignola/italki-api/issues"
  },
  "homepage": "https://github.com/PatriceVignola/italki-api#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-copy-source": "^2.0.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.4",
    "pretty-quick": "^1.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^4.0.0",
    "uglify-es": "^3.3.9"
  }
}
